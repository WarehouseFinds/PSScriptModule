{
    // Enable PowerShell Script Analyzer in workspace
    "powershell.scriptAnalysis.enable": true,
    "powershell.scriptAnalysis.settingsPath": ".PSScriptAnalyzerSettings.psd1",

    // Use PowerShell extension as default formatter for PowerShell files
    "editor.defaultFormatter": "ms-vscode.powershell",

    // Basic editor/workspace conveniences
    "files.exclude": {
        "**/artifacts": true,
        "**/.DS_Store": true
    },

    // Placeholder settings for InjectionHunter extension â€” set by user to match chosen extension
    "injectionHunter.enable": true,
    "injectionHunter.scanOnSave": true
}
